<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>encheres</display-name>
  <welcome-file-list>
    <welcome-file>accueil.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Connexion</servlet-name>
    <servlet-class>fr.eni.encheres.servlets.Connexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connexion</servlet-name>
    <url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Deconnexion</servlet-name>
    <servlet-class>fr.eni.encheres.servlets.Deconnexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Deconnexion</servlet-name>
    <url-pattern>/deconnexion</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Accueil</servlet-name>
    <servlet-class>fr.eni.encheres.servlets.Accueil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Accueil</servlet-name>
    <url-pattern>/accueil</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CreerProfil</servlet-name>
    <servlet-class>fr.eni.encheres.servlets.CreerProfil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreerProfil</servlet-name>
    <url-pattern>/creationProfil</url-pattern>
  </servlet-mapping>
 
  <filter>
    <filter-name>PrechargementFilter</filter-name>
    <filter-class>fr.eni.encheres.filters.PrechargementFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PrechargementFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>